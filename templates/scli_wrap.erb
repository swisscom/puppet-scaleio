#!/bin/bash

echoerr() { echo "$@" 1>&2; }

# login
login_out=$(scli --login --username admin --password <%= scope['scaleio::password'] %> 2>&1)
if [ $? -gt 0 ]; then
  echoerr "Error while logging in:\n${login_out}"
  exit 129
fi

# run cmd
scli "$@"
ec=$?

# logout
logout_out=$(scli --logout 2>&1)
if [ $? -gt 0 ]; then
  echoerr "Error while logging out:\n${logout_out}"
  exit 129
fi
exit $ec

